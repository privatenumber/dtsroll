{
	"name": "dtsroll",
	"version": "0.0.0-semantic-release",
	"description": "Bundle dts files",
	"keywords": [
		"bundle",
		"typescript",
		"dts",
		"declaration"
	],
	"license": "MIT",
	"repository": "privatenumber/dtsroll",
	"funding": "https://github.com/privatenumber/dtsroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"type": "module",
	"bin": "./dist/cli.mjs",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.mjs"
		}
	},
	"imports": {
		"#dtsroll": "./src/index.ts",
		"#dtsroll/vite": "./src/vite.ts",
		"typescript": {
			"typescript4": "typescript4",
			"typescript5": "typescript5",
			"typescript6": "typescript6",
			"default": "typescript"
		}
	},
	"packageManager": "pnpm@10.14.0",
	"scripts": {
		"build": "pkgroll",
		"test": "pnpm build && node tests/index.ts",
		"dev": "node --watch tests/index.ts",
		"lint": "lintroll --cache --node --ignore-pattern tests/fixture-package .",
		"type-check": "tsc",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@rollup/plugin-node-resolve": "^16.0.3",
		"byte-size": "^9.0.1",
		"cleye": "^2.2.1",
		"convert-source-map": "^2.0.0",
		"empathic": "^2.0.0",
		"resolve-pkg-maps": "^1.0.0",
		"rollup": "^4.55.3",
		"rollup-plugin-import-trace": "^1.0.1"
	},
	"peerDependencies": {
		"typescript": "^4.5 || ^5.0 || ^6.0",
		"vite": "5 || 6 || 7"
	},
	"peerDependenciesMeta": {
		"vite": {
			"optional": true
		}
	},
	"devDependencies": {
		"@jridgewell/trace-mapping": "^0.3.31",
		"@types/byte-size": "^8.1.2",
		"@types/convert-source-map": "^2.0.3",
		"@types/node": "^25.0.10",
		"alias-imports": "^1.1.1",
		"clean-pkg-json": "^1.3.0",
		"execa": "9.6.1",
		"fs-fixture": "^2.11.0",
		"kolorist": "^1.8.0",
		"lintroll": "^1.28.1",
		"manten": "^2.0.0-beta.1",
		"nano-spawn": "^2.0.0",
		"outdent": "^0.8.0",
		"pkgroll": "^2.21.5",
		"rollup-plugin-dts": "github:privatenumber/rollup-plugin-dts#npm/master",
		"type-fest": "^5.4.1",
		"typescript": "^5.9.3",
		"typescript4": "npm:typescript@^4.5",
		"typescript5": "npm:typescript@^5.0",
		"typescript6": "npm:typescript@beta",
		"unplugin-dts": "1.0.0-beta.6",
		"vite": "^7.3.1"
	}
}
