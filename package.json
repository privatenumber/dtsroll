{
	"name": "dtsroll",
	"version": "0.0.0-semantic-release",
	"description": "Bundle dts files",
	"keywords": [
		"bundle",
		"typescript",
		"dts",
		"declaration"
	],
	"license": "MIT",
	"repository": "privatenumber/dtsroll",
	"funding": "https://github.com/privatenumber/dtsroll?sponsor=1",
	"author": {
		"name": "Hiroki Osame",
		"email": "hiroki.osame@gmail.com"
	},
	"files": [
		"dist"
	],
	"bin": "./dist/cli.mjs",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"default": "./dist/index.mjs"
		},
		"./vite": {
			"types": "./dist/vite.d.ts",
			"default": "./dist/vite.mjs"
		}
	},
	"imports": {
		"#dtsroll": "./src/index.ts",
		"#dtsroll/vite": "./src/vite.ts"
	},
	"packageManager": "pnpm@9.15.3",
	"scripts": {
		"build": "pkgroll",
		"test": "pnpm build && tsx tests/index.ts",
		"dev": "tsx watch tests/index.ts",
		"lint": "lintroll --cache --node --ignore-pattern tests/fixture-package .",
		"type-check": "tsc",
		"prepack": "pnpm build && clean-pkg-json"
	},
	"engines": {
		"node": ">=18"
	},
	"dependencies": {
		"@rollup/plugin-node-resolve": "^16.0.0",
		"byte-size": "^9.0.1",
		"cleye": "^1.3.2",
		"rollup": "^4.29.1",
		"rollup-plugin-dts": "6.1.1"
	},
	"peerDependencies": {
		"typescript": "^4.5 || ^5.0",
		"vite": "5 || 6"
	},
	"peerDependenciesMeta": {
		"vite": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/byte-size": "^8.1.2",
		"@types/node": "^22.10.2",
		"clean-pkg-json": "^1.2.0",
		"execa": "9.3.0",
		"fs-fixture": "^2.6.0",
		"kolorist": "^1.8.0",
		"lintroll": "^1.13.0",
		"manten": "^1.3.0",
		"nano-spawn": "^0.2.0",
		"outdent": "^0.8.0",
		"pkgroll": "^2.6.0",
		"tsx": "^4.19.2",
		"type-fest": "^4.31.0",
		"typescript": "^5.7.2",
		"vite": "^6.0.7"
	}
}
