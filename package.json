{
  "name": "dtsroll",
  "version": "0.0.0-semantic-release",
  "description": "Bundle dts files",
  "keywords": [
    "bundle",
    "typescript",
    "dts",
    "declaration"
  ],
  "license": "MIT",
  "repository": "privatenumber/dtsroll",
  "funding": "https://github.com/privatenumber/dtsroll?sponsor=1",
  "author": {
    "name": "Hiroki Osame",
    "email": "hiroki.osame@gmail.com"
  },
  "files": [
    "dist"
  ],
  "bin": "./dist/cli.mjs",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.mjs"
    },
    "./vite": {
      "types": "./dist/vite.d.ts",
      "default": "./dist/vite.mjs"
    }
  },
  "imports": {
    "#dtsroll": "./src/index.ts",
    "#dtsroll/vite": "./src/vite.ts"
  },
  "packageManager": "pnpm@10.14.0",
  "scripts": {
    "build": "pkgroll",
    "test": "pnpm build && tsx tests/index.ts",
    "dev": "tsx watch tests/index.ts",
    "lint": "lintroll --cache --node --ignore-pattern tests/fixture-package .",
    "type-check": "tsc"
  },
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@rollup/plugin-node-resolve": "^16.0.1",
    "byte-size": "^9.0.1",
    "cleye": "^1.3.4",
    "rollup": "^4.46.2",
    "rollup-plugin-dts": "github:privatenumber/rollup-plugin-dts#npm/namespace-child-hoisting"
  },
  "peerDependencies": {
    "typescript": "^4.5 || ^5.0",
    "vite": "5 || 6"
  },
  "peerDependenciesMeta": {
    "vite": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/byte-size": "^8.1.2",
    "@types/node": "^24.2.1",
    "clean-pkg-json": "^1.3.0",
    "execa": "9.6.0",
    "fs-fixture": "^2.8.1",
    "kolorist": "^1.8.0",
    "lintroll": "^1.19.1",
    "manten": "^1.5.0",
    "nano-spawn": "^1.0.2",
    "outdent": "^0.8.0",
    "pkgroll": "^2.15.3",
    "tsx": "^4.20.4",
    "type-fest": "^4.41.0",
    "typescript": "^5.9.2",
    "vite": "^7.1.2",
    "vite-plugin-dts": "^4.5.4"
  }
}